{
	"main": "main.js",
	"version": "1.0.0",
	"author": {
		"name": "shohei909",
		"email": "909mmsphere@gmail.com"
	},
	"description": "Viewer for Drawing Log(.drawlog)",
	"name": "DrawingLogViewer",
	"dependencies": {
		"golden-layout": "1.5.9",
		"hasbin": "1.2.3"
	},
	"devDependencies": {
		"electron": "9.2.0",
		"electron-builder": "22.4.0"
	},
	"build": {
		"appId": "net.corge.drawlog.viewer",
		"fileAssociations": [
			{
				"ext": [
					"drawlog"
				],
				"name": "DrawingLog",
				"role": "Viewer"
			}
		],
		"win": {
			"target": {
				"target": "nsis",
				"arch": [
					"ia32",
					"x64"
				]
			}
		},
		"linux": {
			"target": [
				"deb",
				"tar.gz"
			]
		},
		"directories": {
			"output": "dist_${os}"
		},
		"extraFiles": {
			"from": "bin/${os}/${arch}",
			"to": "bin"
		},
		"files": [
			"index.html",
			"icon.png",
			"main.js",
			"renderer.js",
			"drawlog.min.js",
			"*.css",
			"splitjs/*",
			"fonts/*"
		]
	},
	"homepage": "https://drawlog.corge.net",
	"license": "MIT"
}
